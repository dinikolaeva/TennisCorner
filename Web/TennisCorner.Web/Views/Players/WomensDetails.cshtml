@using System.Globalization
@using TennisCorner.Web.ViewModels.Players
@model PlayerViewModel
@{
    this.ViewData["Title"] = @Model.LastName;
}

<section>
    <div class="inner-women-banner">
        <div class="container">
        </div>
    </div>
    <div class="inner-information-text">
        <div class="container">
            <h3>@Model.FirstName @Model.LastName</h3>
            <ul class="breadcrumb">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active">@Model.FirstName @Model.LastName</li>
            </ul>
        </div>
    </div>
    <div class="row row-eq-height">
        <!-- Info Box -->
        <div class="col-lg-4 info_box_col">
            <div class="info_box">
                <div class="info_image"><img src="@Model.ImageUrl" alt=""></div>
                <div class="info_content">
                    <div class="info_title"><strong>@Model.FirstName @Model.LastName</strong></div>
                    <div class="info_text">Age: <strong>@Model.Age</strong></div>
                    <div class="info_text">Date of birth: <strong>@Model.DateOfBirth.ToString("dd MMM yyyy", CultureInfo.InvariantCulture)</strong></div>
                    <div class="info_text">Country: <strong>@Model.Country.CountryName</strong></div>
                    <div class="info_text">Current Rank: <strong>@Model.CurrentRank</strong></div>
                </div>
            </div>
        </div>
        <!-- Panel -->
        <div class="col-lg-7" id="info">
            <h2><strong style="text-align:center">Statistic:</strong></h2>
            <div class="tab_panel active">
                <div class="tab_panel_content">
                    <div class="tab_list">
                        @if (@Model.Height != null)
                        {
                            <div class="info_text_black"><strong id="text">Height: <br /></strong>@Model.Height</div>
                        }
                        @if (@Model.Weight != null)
                        {
                            <div class="info_text_black"><strong id="text">Weight: <br /></strong>@Model.Weight</div>
                        }
                        <div class="info_text_black"><strong id="text">Career Win: <br /></strong>@Model.CareerWin</div>
                        <div class="info_text_black"><strong id="text">Career Loss: <br /></strong>@Model.CareerLoss</div>
                        <div class="info_text_black"><strong id="text">Total points: <br /></strong>@Model.TotalPoints</div>
                        <div class="info_text_black"><strong id="text">Coach: <br /></strong>@Model.Coach</div>
                        <div class="info_text_black"><strong id="text">Career prize money: <br /></strong> @Model.TotalPrizeMoney.ToString("C0", CultureInfo.CreateSpecificCulture("en-US"))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>